# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js,py, html}]
charset = utf-8

# 4 space indentation
[*.{js, py, html}]
indent_style = space
indent_size = 4

# 2 space indentation for package.json file
[{package.json}]
indent_style = space
indent_size = 2
